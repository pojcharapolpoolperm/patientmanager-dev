          <div class="col s1">
            <input type="checkbox" class="filled-in" id="filled-in-box2" name="HT" />
            <label for="filled-in-box2">HT</label>
          </div>
          <div class="col s1">
            <input type="checkbox" class="filled-in" id="filled-in-box3" name="Asthma" />
            <label for="filled-in-box3">Asthma</label>
          </div>
