      <div class="col s2">
        <label for="">รวม (ครั้ง)</label>
        <input type="text" name="count_ANC" placeholder="รวม (ครั้ง)">
      </div>
      <div class="col s2">
        <label for="">TT:</label>
        <select name="TT">
          <option value="0">TT</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
      </div>
      <div class="col s2">
        <label for="">...</label>
        <select name="TT_more">
